@model List<CarRentalApp.Models.CustomerDto>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

@if (Model == null || !Model.Any())
{
    <p>No customers found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.FirstName</td>
                    <td>@c.LastName</td>
                    <td>@c.Phone</td>
                    <td>@c.Email</td>
                </tr>
            }
        </tbody>
    </table>
}